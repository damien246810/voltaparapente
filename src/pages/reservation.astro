---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <!-- Section h√©ro avec image de fond -->
  <section 
    class="relative h-screen bg-cover bg-center flex items-center justify-center text-white"
    style="background-image: url('/images/tsantonnaire.jpg');"
  >
    <!-- Overlay sombre -->
    <div class="absolute inset-0 bg-black/10"></div>

    <Navbar />

    <!-- Contenu centr√© -->
    <div class="relative z-10 text-center space-y-6">
    <!-- Titre principal -->
    <h1 class="text-4xl font-bold">R√©servez votre vol d√®s maintenant</h1>
    
    <!-- Bouton WhatsApp -->
    <a 
        aria-label="Chat on WhatsApp" 
        href="https://wa.me/41792032073"
        target="_blank"
        class="inline-block mx-auto"
    >
        <img 
        src="/images/whatsapp.png" 
        alt="Chat on WhatsApp" 
        class="max-w-[300px] h-auto"
        />
    </a>

    <!-- Num√©ro de t√©l√©phone cliquable -->
    <p class="text-lg font-medium">
    <a href="tel:+41792032073" 
        class="bg-black/30 px-3 py-1 rounded-lg hover:text-yellow-400 transition inline-block">
        üìû +41 79 203 20 73
    </a>
    </p>


    <!-- Lien vers formulaire -->
    <a href="#formulaire"
    class="inline-block px-2 py-1 bg-black/30 text-white font-medium rounded-lg hover:text-yellow-400 transition">
    Remplir le formulaire
    </a>

    </div>

  </section>

  <!-- Formulaire de r√©servation -->
  <section id="formulaire" class="container mx-auto px-5 py-16 scroll-mt-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Formulaire de r√©servation</h2>
    <form class="max-w-2xl mx-auto space-y-4 bg-gray-100 p-6 rounded-xl shadow-md"
          action="https://formspree.io/f/mkgvaroz"
          method="POST">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="firstName" class="block mb-1 font-medium">Pr√©nom</label>
            <input type="text" id="firstName" name="firstName" required
                    class="w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-400 text-black" />
          </div>
          <div>
            <label for="lastName" class="block mb-1 font-medium">Nom</label>
            <input type="text" id="lastName" name="lastName" required
                      class="w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-400 text-black" />
          </div>
      </div>

      <div>
        <label for="email" class="block mb-1 font-medium">Email</label>
        <input type="email" id="email" name="email" required
               class="w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-400" />
      </div>

      <div class="mt-4">
        <label for="phone" class="block mb-1 font-medium">T√©l√©phone</label>
        <input type="tel" id="phone" name="phone" required
              class="w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-400"
               />
      </div>

      <div>
        <label for="date" class="block mb-1 font-medium">Date souhait√©e</label>
        <input type="date" id="date" name="date" required
               class="w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-400" />
      </div>

      <div>
        <label for="message" class="block mb-1 font-medium">Message</label>
        <textarea id="message" name="message" rows="4"
                  class="w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-yellow-400"></textarea>
      </div>

      <button type="submit" 
              class="w-full py-3 bg-yellow-400 text-black font-semibold rounded-lg hover:bg-yellow-500 transition">
        Envoyer la demande
      </button>
    </form>
  </section>
  <Footer />
</Layout>
